Ejercicios XML DTD 2
Ejercicio: [Ejercicio 1]
-->

<!DOCTYPE factura [
    <!ELEMENT factura (datos-emisor, datos-cliente, detalle-factura)>
    <!ATTLIST factura numero CDATA #REQUIRED fecha CDATA #REQUIRED>

    <!ELEMENT datos-emisor (nombre, cif, telefono)>
    <!ELEMENT datos-cliente (nombre, cif, telefono)>
    <!ELEMENT nombre (#PCDATA)>
    <!ELEMENT cif (#PCDATA)>
    <!ELEMENT telefono (#PCDATA)>

    <!ELEMENT detalle-factura (linea+)>
    <!ATTLIST detalle-factura importe CDATA #REQUIRED>

    <!ELEMENT linea (descripcion, cantidad, pvp, oferta?)>
    <!ATTLIST linea codigo-articulo ID #REQUIRED tipo (Libro | DVD | Varios) #REQUIRED>
    <!ELEMENT descripcion (#PCDATA)>
    <!ELEMENT cantidad (#PCDATA)>
    <!ELEMENT pvp (#PCDATA)>
    <!ELEMENT oferta EMPTY>
]>

<factura numero="12345" fecha="2025-03-20">
    <!-- Datos del emisor -->
    <datos-emisor>
        <nombre>Librería El Saber</nombre>
        <cif>B12345678</cif>
        <telefono>912345678</telefono>
    </datos-emisor>
    <!-- Datos del cliente -->
    <datos-cliente>
        <nombre>Biblioteca Central</nombre>
        <cif>A87654321</cif>
        <telefono>987654321</telefono>
    </datos-cliente>
    <!-- Detalle de la factura -->
    <detalle-factura importe="250.00">
        <!-- Línea de producto -->
        <linea codigo-articulo="L001" tipo="Libro">
            <descripcion>Enciclopedia Universal</descripcion>
            <cantidad>3</cantidad>
            <pvp>50.00</pvp>
            <oferta/>
        </linea>
        <!-- Línea de producto -->
        <linea codigo-articulo="D001" tipo="DVD">
            <descripcion>Documental Naturaleza</descripcion>
            <cantidad>2</cantidad>
            <pvp>30.00</pvp>
        </linea>
    </detalle-factura>
</factura>

